<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/Register"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="#fffefe" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:id="@+id/textView6"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:textColor="#fffefe" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/register_username_login_form"
                android:background="#fffefe"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Name:"
                android:id="@+id/textView26"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/register_display_name"
                android:background="#ffffff"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/textView7"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:textColor="#fffefe" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_password_login_form"
                android:background="#fffefe"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retype password"
                android:id="@+id/textView8"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:textColor="#fffefe" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_retype_password_login_form"
                android:background="#fffefe"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:text="Register"
                android:id="@+id/register_form_submit_button"
                android:layout_marginTop="20dp"
                android:layout_weight="0.01" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>