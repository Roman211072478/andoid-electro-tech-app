<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fiki.n3.technology.electro.electrotechn3application.activities.administration.rope.brake.RopeBrakeCreate2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Rope Brake 2"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EquationType"
                        android:id="@+id/textView29"
                        android:layout_weight="50"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Output"
                        android:id="@+id/textView30"
                        android:layout_weight="70" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Efficiency"
                        android:id="@+id/type_rope_create2_layout"
                        android:layout_weight="50"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RopeBreak"
                        android:id="@+id/output_rope_create2_layout"
                        android:layout_weight="50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formula:"
                    android:id="@+id/textView11"
                    android:textSize="17dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/formula_rope_create2_layout"
                    android:layout_marginLeft="7dp"
                    android:textColor="#0828c5"
                    android:paddingBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current:"
                        android:id="@+id/textView17"
                        android:layout_marginTop="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volts:"
                        android:id="@+id/textView171"
                        android:layout_marginTop="25dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Efficiency:"
                        android:id="@+id/textView13"
                        android:layout_marginTop="70dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Clear"
                        android:id="@+id/clear_btn_rope_create2_layout"
                        android:layout_marginTop="50dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Cancel"
                        android:id="@+id/back_rope_create2_layout" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/current_rope_create2_layout" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/volts_rope_create2_layout"
                        android:spinnerMode="dialog"
                        android:layout_marginTop="25dp"
                        android:paddingBottom="37dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/efficiency_rope_create2_layout"
                        android:layout_marginTop="5dp"
                        android:enabled="false"
                        android:editable="false" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="65dp"
                        android:text="Create"
                        android:id="@+id/submit_btn_rope_create2_layout"
                        android:layout_marginTop="29dp"
                        android:layout_weight="0.11"
                        android:enabled="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="#910000"
                        android:id="@+id/current_error_rope_brake_create2"
                        android:textSize="16dp"
                        android:layout_marginTop="15dp"
                        android:visibility="invisible"
                        android:text="current error" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate effic"
                        android:id="@+id/generate_rope_create2_layout"
                        android:layout_marginTop="90dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
